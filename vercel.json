{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1",
      "has": [
        {
          "type": "middleware"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "middleware": {
    "api/(.*)": "middleware/redirect.js"
  }
}